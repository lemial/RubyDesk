<div id="change-assignee" class="reveal-modal small" data-reveal>
  <h3><%= t(:change_assignee) %></h3>

  <%= form_for ticket, remote: true, method: :patch do |f| %>
    <p>
	<% if ticket.assignee_id.nil? %>
    	    <%= f.select :assignee_id, options_from_collection_for_select(@agents, 'id', 'fname', ticket.assignee_id), { include_blank: false }, { class: 'select2' } %>
    	<% else %>
    	    <%= f.select :assignee_id, options_from_collection_for_select(@agents, 'id', 'fname', ticket.assignee_id), { include_blank: t(:unassigned) }, { class: 'select2' } %>
    	<% end %>
    </p>
    <%= f.submit t(:assign), class: 'button' %>
  <% end %>

  <a class="close-reveal-modal">&#215;</a>
</div>

